{
  "name": "cap-azure-ad-b2c",
  "description": "Authenticate to a CAP service using Azure AD B2C",
  "repository": "https://github.com/gregorwolf/cap-azure-ad-b2c",
  "license": "MIT",
  "version": "1.0.0",
  "engines": {
    "node": "^12"
  },
  "files": [
    "db",
    "srv"
  ],
  "dependencies": {
    "@sap/audit-logging": "^3.2.0",
    "@sap/cds": "^4.4.7",
    "@sap/cds-odata-v2-adapter-proxy": "^1.5.1",
    "@sap/xsenv": "^3.1.0",
    "@sap/xssec": "^3.0.10",
    "applicationinsights": "^1.8.8",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^4.2.0",
    "passport": "^0.4.1",
    "passport-azure-ad": "latest",
    "sqlite3": "^5.0.0"
  },
  "devDependencies": {
    "jsonwebtoken": "latest",
    "cross-env": "^7.0.3",
    "@sap/cds-dk": "^3.2.0"
  },
  "scripts": {
    "setup": "npm install && npm run build && npm run start:local",
    "start:local": "cross-env PORT=6420 cds run",
    "start": "node node_modules/@sap/cds/bin/cds.js run",
    "build": " npm run build:cds && npm run deploy",
    "build:cds": "cds build/all --clean",
    "deploy": "cds deploy"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "database": "my.db"
        }
      },
      "uaa": {
        "kind": "xsuaa"
      },
      "auth": {
        "impl": "./srv/auth.js"
      }
    },
    "odata": {
      "version": "v4"
    }
  }
}
