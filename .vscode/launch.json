    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "cds run",
            "program": "${workspaceFolder}/.vscode/cds", "args": [ "run" ],
            "env": {
              "DEBUG":"*",
              "PORT": "6420"
            },
            "skipFiles": [
                "<node_internals>/**/*.js",
                "**/cds-reflect/lib/index.js",
                "**/cds/lib/index.js",
                "**/.vscode/cds.js",
            ]
        }
    ]
}